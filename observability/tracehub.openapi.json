{
  "openapi": "3.0.0",
  "info": {
    "title": "TraceHub API",
    "version": "1.0.0"
  },
  "paths": {
    "/traces": {
      "post": {
        "summary": "Submit trace event",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TraceEvent"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TraceEvent": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "service": {
            "type": "string"
          },
          "level": {
            "type": "string",
            "enum": [
              "info",
              "warning",
              "error"
            ]
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "timestamp",
          "service",
          "level",
          "message"
        ]
      }
    }
  }
}